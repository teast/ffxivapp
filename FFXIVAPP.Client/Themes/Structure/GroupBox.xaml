<Styles xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:groupbox="clr-namespace:Teast.Controls;assembly=Teast.Controls.GroupBox">

    <Style Selector="groupbox|GroupBox">
        <Setter Property="HeaderBackground" Value="{DynamicResource ThemeBorderMidBrush}"/>
        <Setter Property="HeaderForeground" Value="{DynamicResource ThemeTopbarTitleBrush}"/>
        <Setter Property="HeaderMargin" Value="4"/>
        <Setter Property="HeaderUpperCase" Value="False"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorderMidBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Margin" Value="5"/>
    </Style>
</Styles>